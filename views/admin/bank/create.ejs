<!DOCTYPE html>
<html lang="en">

<%- include ../../partials/header.ejs %>

<body>
  <div id="app">
    <%- include ../../partials/sidebar.ejs %>
    <div id="main">
      <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
          <i class="bi bi-justify fs-3"></i>
        </a>
      </header>

      <div class="page-heading">
        <div class="page-title">
          <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
              <h3>Create Bank</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
              <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                  <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Create</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
        <section class="section">
          <div class="card">
            <div class="card-header">
              <%- include ../../partials/message.ejs %>
            </div>
            <div class="card-body">
              <form action="/bank/create" method="POST">
                <div class="col-6">
                  <div class="form-group">
                    <label for="basicInput">Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Enter name">
                  </div>
                  <div class="form-group">
                    <label for="basicInput">Bank Name</label>
                    <input type="text" name="bankName" class="form-control" placeholder="Enter bank name">
                  </div>
                  <div class="form-group">
                    <label for="basicInput">Bank Account Number</label>
                    <input type="number" name="bankAccountNumber" class="form-control"
                      placeholder="Enter bank account number">
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
              </form>
            </div>
          </div>
        </section>
      </div>
      <%- include ../../partials/footer.ejs %>
    </div>
  </div>
  <%- include ../../partials/javascripts.ejs %>
</body>

</html>
