<!DOCTYPE html>
<html lang="en">

<%- include ../../partials/header.ejs %>

<body>
  <div id="app">
    <%- include ../../partials/sidebar.ejs %>
    <div id="main">
      <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
          <i class="bi bi-justify fs-3"></i>
        </a>
      </header>

      <div class="page-heading">
        <div class="page-title">
          <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
              <h3>Category</h3>
              <p class="text-subtitle text-muted">For user to check they list</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
              <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Category</li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
        <section class="section">
          <div class="card">
            <div class="card-header">
              <%- include ../../partials/message.ejs %>
              <a href="/voucher/create" class="btn btn-primary">
                <i class="bi bi-plus"></i>
                Create
              </a>
            </div>
            <div class="card-body">
              <table class="table table-striped" id="table1">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Thumbnail</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Nominal</th>
                    <th>Status</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% vouchers.forEach((item, i)=> { %>
                  <tr>
                    <td>
                      <%= i + 1 %>
                    </td>
                    <td>
                      <img src="<%= '/uploads/' + item.thumbnail %>" alt="<%= item.name %>" style="max-width: 40px;">
                    </td>
                    <td>
                      <%= item.name %>
                    </td>
                    <td>
                      <%= item.category.name %>
                    </td>
                    <td>
                      <% item.nominals.map(item=> { %>
                      <div class="badge bg-warning">
                        <%= `${item.coinQuantity} ${item.coinName} - Rp. ${item.price}` %>
                      </div><br />
                      <% })%>
                    </td>
                    <td>
                      <a href="/voucher/<%= item._id %>">Detail</a>
                    </td>
                    <td>
                      <form action="/voucher/status/<%= item.id %>?_method=PUT" method="POST">
                        <div class="form-check form-switch">
                          <input class="form-check-input" type="checkbox" data-action="submit-form" <%=item.active
                                  ? 'checked' :'' %>>
                          <label class="form-check-label">
                            Active
                          </label>
                        </div>
                      </form>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>

        </section>
      </div>
      <%- include ../../partials/footer.ejs %>
    </div>
  </div>
  <%- include ../../partials/javascripts.ejs %>
  <script src="assets/vendors/simple-datatables/simple-datatables.js"></script>
  <script>
    // Simple Datatable
    let table1 = document.querySelector('#table1');
    let dataTable = new simpleDatatables.DataTable(table1);

    const togglerActivatedStatus = document.querySelectorAll('[data-action="submit-form"]');

    togglerActivatedStatus?.forEach(node => {
      node.addEventListener('change', e => {
        e.preventDefault();
        const isChecked = e.target.checked;
        let form = node.closest('form');
        form.submit();
      });
    });
  </script>
</body>

</html>
