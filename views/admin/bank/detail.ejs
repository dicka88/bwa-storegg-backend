<!DOCTYPE html>
<html lang="en">

<%- include ../../partials/header.ejs %>

  <body>
    <div id="app">
      <%- include ../../partials/sidebar.ejs %>
        <div id="main">
          <header class="mb-3">
            <a href="#" class="burger-btn d-block d-xl-none">
              <i class="bi bi-justify fs-3"></i>
            </a>
          </header>

          <div class="page-heading">
            <div class="page-title">
              <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                  <h3>
                    Detail Category <%= bank.name %>
                  </h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                  <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                      <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
                      <li class="breadcrumb-item active" aria-current="page">Create</li>
                    </ol>
                  </nav>
                </div>
              </div>
            </div>
            <section class="section">
              <div class="card">
                <div class="card-header">
                  <%- include ../../partials/message.ejs %>
                </div>
                <div class="card-body">
                  <div class="col-6">
                    <form action="/bank/<%= bank.id %>?_method=PUT" method="POST">
                      <div class="form-group">
                        <label for="basicInput">Name</label>
                        <input type="text" name="name" value="<%= bank.name %>" class="form-control"
                          placeholder="Enter coin name">
                      </div>
                      <div class="form-group">
                        <label for="basicInput">Bank Name</label>
                        <input type="text" name="bankName" value="<%= bank.bankName %>" class="form-control"
                          placeholder="Enter coin quantity">
                      </div>
                      <div class="form-group">
                        <label for="basicInput">Bank Account Number</label>
                        <input type="number" name="bankAccountNumber" value="<%= bank.bankAccountNumber %>"
                          class="form-control" placeholder="Enter coin price">
                      </div>
                      <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <button type="button" class="btn btn-outline-danger block" data-bs-toggle="modal"
                          data-bs-target="#default">
                          Remove
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

            </section>
          </div>
          <%- include ../../partials/footer.ejs %>
        </div>
    </div>
    <%- include ../../partials/javascripts.ejs %>
      <!--Basic Modal -->
      <div class="modal fade text-left" id="default" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="myModalLabel1">Remove bank <%= bank.bankName + ' - ' + bank.name %>
              </h5>
              <button type="button" class="close rounded-pill" data-bs-dismiss="modal" aria-label="Close">
                <i data-feather="x"></i>
              </button>
            </div>
            <div class="modal-body">
              <p>
                Warning, after you remove, category cannot be restored
              </p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn" data-bs-dismiss="modal">
                <i class="bx bx-x d-block d-sm-none"></i>
                <span class="d-none d-sm-block">Close</span>
              </button>
              <form action="/bank/<%= bank._id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger ml-1">
                  <i class="bx bx-check d-block d-sm-none"></i>
                  <span class="d-none d-sm-block">Remove now</span>
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
  </body>

</html>
