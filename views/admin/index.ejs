<!DOCTYPE html>
<html lang="en">

<%- include ../partials/header.ejs %>

<body>
  <div id="app">
    <%- include ../partials/sidebar.ejs %>
    <div id="main">
      <%- include ../partials/navbar.ejs %>

      <% if(alert.alreadyLogged.length) { %>
      <div class="alert alert-success alert-dismissible show fade">
        <%= alert.alreadyLogged %>
      </div>
      <% } %>

      <div class="page-heading">
        <h3>Dashboard</h3>
      </div>
      <div class="page-content">
        <div class="col-12 col-lg-9">
          <div class="row">
            <div class="col-6 col-lg-3 col-md-6">
              <div class="card">
                <div class="card-body px-3 py-4-5">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="stats-icon purple">
                        <i class="iconly-boldShow"></i>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <h6 class="text-muted font-semibold">Player</h6>
                      <h6 class="font-extrabold mb-0"><%= count.player %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-3 col-md-6">
              <div class="card">
                <div class="card-body px-3 py-4-5">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="stats-icon blue">
                        <i class="iconly-boldProfile"></i>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <h6 class="text-muted font-semibold">Transaction</h6>
                      <h6 class="font-extrabold mb-0"><%= count.transaction %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-3 col-md-6">
              <div class="card">
                <div class="card-body px-3 py-4-5">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="stats-icon green">
                        <i class="iconly-boldAdd-User"></i>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <h6 class="text-muted font-semibold">Voucher</h6>
                      <h6 class="font-extrabold mb-0"><%= count.voucher %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-3 col-md-6">
              <div class="card">
                <div class="card-body px-3 py-4-5">
                  <div class="row">
                    <div class="col-md-4">
                      <div class="stats-icon red">
                        <i class="iconly-boldBookmark"></i>
                      </div>
                    </div>
                    <div class="col-md-8">
                      <h6 class="text-muted font-semibold">User</h6>
                      <h6 class="font-extrabold mb-0"><%= count.user %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include ../partials/footer.ejs %>
    </div>
  </div>
  <%- include ../partials/javascripts.ejs %>
</body>

</html>
